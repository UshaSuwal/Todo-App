<%= turbo_frame_tag todo do %>
  <div class="todo flex justify-center">
    <div class="rounded overflow-hidden shadow-lg bg-red-300 mt-10 w-3/6">
      <div class="px-6 py-8 h-full flex">
        <div class="font-bold text-xl mb-2 ">
          <%= link_to(todo.task, todo_path(todo), data: { turbo_frame: "_top" }) %>
        </div>
      </div>
    </div>

    <div>
      <div class="flex ml-10 mt-20 ">
        <%= button_to(todo_path(todo), method: :delete, class: "btn mr-10") do %>
          <i class="fa-solid fa-trash"></i>
          <%end%>
        <%= link_to(edit_todo_path(todo), class: "btn") do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
